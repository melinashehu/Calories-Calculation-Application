<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.HomeController" prefHeight="530.0" prefWidth="350.0" style="-fx-background-color: #85b48a;">

    <!-- Titulli i faqes -->
    <Label text="Welcome!" layoutX="120.0" layoutY="20.0" style="-fx-font-size: 28px; -fx-text-fill: #ffffff;" />

    <!-- Shirit për shfaqjen e raportit -->
    <VBox layoutX="20.0" layoutY="70.0" prefWidth="310.0" spacing="15.0"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-color: lightgray; -fx-border-radius: 20; -fx-border-width: 2; -fx-padding: 20;">
        <!-- Rresht për raportin e kalorive -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Kalorite Totale:" style="-fx-font-size: 14px; -fx-text-fill: #555555;" />
            <Label fx:id="totalCaloriesLabel" text="0" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />
        </HBox>

        <!-- Rresht për raportin e shpenzimeve -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Shpenzimet Totale:" style="-fx-font-size: 14px; -fx-text-fill: #555555;" />
            <Label fx:id="totalSpendingLabel" text="0" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />
        </HBox>

        <!-- Rresht për ditët mbi kufirin -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Ditet qe keni kaluar kufirin e kalorive:" style="-fx-font-size: 14px; -fx-text-fill: #555555;" />
            <Label fx:id="daysAboveThresholdLabel" text="0" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />
        </HBox>
        <Button text="Add Food" onAction="#handleAddFood"/>
        <TextField fx:id="foodNameField" promptText="Food Name"/>
        <TextField fx:id="calorieField" promptText="Calorie Value"/>
        <TextField fx:id="priceField" promptText="Food Price"/>
    </VBox>
</AnchorPane>
